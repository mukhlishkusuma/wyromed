<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/container_border_bottom"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/tv_sales_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text=""
        android:textSize="16sp"
        android:textColor="@color/colorGray"
        android:fontFamily="@font/montserrat_regular"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_sales_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        tools:text="Rp 0"
        android:textColor="@color/colorGrey"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/tv_sales_item_name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_sales_kali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="X"
        android:textColor="@color/colorGrey"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_sales_item_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_sales_item_name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_sales_kuantitas_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/colorGrey"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_sales_kali"
        app:layout_constraintTop_toBottomOf="@+id/tv_sales_item_name"
        tools:ignore="MissingConstraints"
        tools:text="2" />

    <TextView
        android:id="@+id/tv_sales_total_price_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:text="Rp 0" />



</androidx.constraintlayout.widget.ConstraintLayout>