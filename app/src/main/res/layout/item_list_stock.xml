<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:neomorph_background_color="@color/light"
        app:neomorph_corner_radius="8dp"
        app:neomorph_elevation="6dp"
        app:neomorph_highlight_color="@color/neomorph_highlight_color"
        app:neomorph_shadow_color="@color/neomorph_shadow_color"
        app:neomorph_shadow_type="outer"
        app:neomorph_view_type="rectangular"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_list_stock">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_nama_barang_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:fontFamily="@font/montserrat_bold"
                    android:text=""
                    android:textColor="@color/colorGreen"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_medical_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/tv_medical_device"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_nama_barang_stock" />

                <TextView
                    android:id="@+id/tv_inventory_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/tv_inventory_stock"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_medical_device" />

                <TextView
                    android:id="@+id/tv_jumlah_inventory_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text=""
                    android:textColor="@color/colorGray"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/tv_inventory_stock"
                    app:layout_constraintTop_toBottomOf="@+id/tv_medical_device" />

                <TextView
                    android:id="@+id/tv_satuan_inventory_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text=""
                    android:textColor="@color/colorGray"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/tv_jumlah_inventory_stock"
                    app:layout_constraintTop_toBottomOf="@+id/tv_medical_device" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_title_btn_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/title_qty_stock"
                    android:textColor="@color/colorGrey"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_btn_stock"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                        android:id="@+id/neomorph_btn_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:neomorph_background_color="@color/light"
                        app:neomorph_corner_radius="25dp"
                        app:neomorph_elevation="4dp"
                        app:neomorph_highlight_color="@color/neomorph_highlight_color"
                        app:neomorph_shadow_color="@color/neomorph_shadow_color"
                        app:neomorph_shadow_type="outer"
                        app:neomorph_view_type="rectangular">

                        <ImageButton
                            android:id="@+id/btn_minus"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:clickable="true"
                            android:background="@drawable/ic_minus"
                            android:contentDescription="@string/todo" />

                    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                    <TextView
                        android:id="@+id/tv_kuantitas_stock"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/colorGreen"
                        android:textSize="16sp" />

                    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                        android:id="@+id/neomorph_btn_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:neomorph_background_color="@color/light"
                        app:neomorph_corner_radius="25dp"
                        app:neomorph_elevation="4dp"
                        app:neomorph_highlight_color="@color/neomorph_highlight_color"
                        app:neomorph_shadow_color="@color/neomorph_shadow_color"
                        app:neomorph_shadow_type="outer"
                        app:neomorph_view_type="rectangular">

                        <ImageButton
                            android:id="@+id/btn_plus"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:clickable="true"
                            android:background="@drawable/ic_plus"
                            android:contentDescription="@string/todo" />

                    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>